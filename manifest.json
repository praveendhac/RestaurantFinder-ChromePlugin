{
  "manifest_version": 3,
  "name": "Best Restaurant Finder",
  "version": "1.0",
  "description": "Suggests top 2 restaurants for a food item in a given city using Gemini API.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/restaurant_finder_16.ico",
      "48": "icons/restaurant_finder_48.ico",
      "128": "icons/restaurant_finder_128.ico"
    }
  },
  "icons": {
    "16": "icons/restaurant_finder_16.ico",
    "48": "icons/restaurant_finder_48.ico",
    "128": "icons/restaurant_finder_128.ico"
  }
}

